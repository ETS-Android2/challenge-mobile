{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es7", "es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["dist", "scripts", "node_modules", "*.config.ts"]
}
